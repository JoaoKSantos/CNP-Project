generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id String @id @default(cuid())
  email String @unique
  name String?
  password String
  tokenRecuperacao String?
  dataExpiraToken DateTime?
}

model criminosos {
  id String @id @default(cuid())
  cpf String @unique
  nome String
  sobrenome String
  situacao String
  antecedentes String[]
}